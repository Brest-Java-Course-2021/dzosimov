<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    https://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="bookMapper" class="com.epam.brest.dao.jdbc.tools.BookMapper"/>
    <bean id="catalogOfBooksMapper" class="com.epam.brest.dao.jdbc.tools.CatalogOfBooksMapper"/>

    <bean id="bookDaoSpringJdbc" class="com.epam.brest.dao.jdbc.BookDaoSpringJdbc">
        <constructor-arg name="namedParameterJdbcTemplate" ref="namedParameterJdbcTemplate"/>
        <constructor-arg name="bookMapper" ref="bookMapper"/>
        <constructor-arg name="catalogOfBooksMapper" ref="catalogOfBooksMapper"/>
    </bean>

    <bean id="readerDaoSpringJdbc" class="com.epam.brest.dao.jdbc.ReaderDaoSpringJdbc">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <context:component-scan base-package="com.epam.brest.dao"/>

    <import resource="classpath:dao.xml"/>

</beans>